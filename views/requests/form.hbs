<h2>Make your Request</h2>

<form method="POST" action="/api/requests">
	<h4>For service: {{service.name}}</h4>
	<input type="hidden" name="service" value="{{service.id}}" />
	<input type="hidden" name="requester" value="{{user.id}}" />

	<div class="form-group">
		<label for="email">Service owned by:</label>
		<input
			name="firstName"
			value="{{firstName}} {{lastName}}"
			type="text"
			class="form-control"
			id="email"
			readonly
		/>
		<input
			name="email"
			value="{{email}}"
			type="hidden"
			class="form-control"
			id="email"
			readonly
		/>
	</div>

	<div class="form-group">
		<label for="date">Date:</label>
		<input
			name="date"
			value="{{request.address}}"
			type="date"
			class="form-control"
			id="date"
		/>
	</div>
	<div class="form-group">
		<label for="message">Message:</label>
		<textarea
			name="message"
			class="form-control"
			id="message"
			placeholder="This is the message, which will be send to the Provider of the Service"
		></textarea>
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>