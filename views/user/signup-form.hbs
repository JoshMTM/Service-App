<form
	class="form text-center"
	action="/signup/profile"
	method="POST"
	enctype="multipart/form-data"
>
	<div class="form-group">
		<label for="firstName">First name:</label>
		<input
			id="firstName"
			class="form-control"
			name="firstName"
			type="text"
			placeholder="Enter your First name"
		/>
	</div>

	<div class="form-group">
		<label for="lastName">Last name:</label>
		<input
			id="lastName"
			class="form-control"
			name="lastName"
			type="text"
			placeholder="Enter your Last name"
		/>
	</div>

	<div class="form-group">
		<label for="expertise">Expertise:</label>
		<input
			id="expertise"
			class="form-control"
			name="expertise"
			type="text"
			placeholder="What do for a living"
		/>
	</div>

	<div class="form-group">
		<label for="email">Email:</label>
		<input
			id="email"
			class="form-control"
			name="email"
			type="email"
			placeholder="Enter your Email address"
		/>
	</div>

	<div class="form-group">
		<label for="password">Password:</label>
		<input
			id="password"
			class="form-control"
			name="password"
			type="password"
			placeholder="Enter your Password"
		/>
	</div>

	<div class="form-group">
		<label for="img_url">Your Profile picture:</label>
		<input
			id="img_url"
			class="form-control"
			name="img_url"
			type="file"
			accept="image/png image/jpg image/jpeg"
		/>
	</div>

	<div class="form-group">
		<label for="description">Description:</label>
		<textarea
			id="description"
			class="form-control"
			rows="5"
			cols="45"
			name="description"
			placeholder="Tell us briefly about who you are and what you do"
		></textarea>
	</div>
	<br />
	<br />
	<button class="btn btn-primary">Sign Up</button>
</form>

{{#if error}}
	<p class="error">message:{{error}}</p>
{{/if}}